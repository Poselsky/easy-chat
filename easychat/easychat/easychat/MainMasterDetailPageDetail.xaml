<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="easychat.MainMasterDetailPageDetail"
             Title="Detail"
             x:Name="this">
    <StackLayout BindingContext="{Binding Source={x:Reference this}}">
        <Label 
            Text="User name" 
            HorizontalOptions="Center"></Label>
        <Entry
            HorizontalOptions="FillAndExpand"
            Text="{Binding DisplayName, Mode=TwoWay}"></Entry>
        <Label 
            Text="Email" 
            HorizontalOptions="Center"></Label>
        <Entry
            HorizontalOptions="FillAndExpand"
            Text="{Binding Email, Mode=TwoWay}"></Entry>
        <Label 
            Text="Password" 
            HorizontalOptions="CenterAndExpand"></Label>
        <Entry
            HorizontalOptions="FillAndExpand"
            Text="{Binding Password, Mode=TwoWay}"
            IsPassword="True"></Entry>
        <Button Text="Register" Clicked="Register"></Button>
        <Button Text="Log In" Clicked="LogIn"></Button>
    </StackLayout>
</ContentPage>